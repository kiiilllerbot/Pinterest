<%= simple_form_for(@pin) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :image,label:false,placeholder:'Title' %>
    <%= f.input :title,label:false,placeholder:'Title' %>
    <%= f.input :description,label:false,placeholder:'Description',input_html:{rows:6} %>
    <%= f.association :user, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,:class=>"btn btn-primary btn-sm ml-0" %>
    <%= link_to 'Back',pins_path, :class=>"btn btn-info btn-sm" %>
  </div>
<% end %>
